            $(document).ready(function () {
                var socket = io();
                setup($('#page'), "#{user.username}", "#{user.displayname}", socket)
            });
    body.bodygrad
        #page.pageContainer
            ul
                li
                    | Id:
                    span#workerId.bold #{user.username}
                    br
                    | Points:
                    spans#pointsEarned.bold #{user.username}
                    br
                    | Type:
                    span#userType.bold #{user.displayname}

            #mainbody(style='margin-bottom:20;margin-top:20;margin-left:20;margin-right:20;')
            button#confirm(type='button',  onclick='completedTask()') Submit
